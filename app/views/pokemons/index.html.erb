<div class="has-text-centered">
  <%= image_tag("pokedex-logo.png", :alt => "Pokedex logo", :class => "m-auto") %>
</div>

<div class="fixed-grid has-3-cols">
  <div class="grid">
    <% Pokemon.all.each do |pokemon| %>
      <div class="cell">
        <div class="card">
          <div class="card-image has-text-centered">
            <figure class="is-inline-block p-5">
              <img
                src=<%= pokemon.sprite %>
                alt="Image of <%= pokemon.name %>"
                class="image is-128x128"
              >
            </figure>
          </div>

          <div class="card-header">
            <div class="card-header-title is-centered title is-4">
              <%= pokemon.name %>
            </div>
          </div>

          <div class="card-content">
            NÂ°<%= pokemon.id %>

            <div class="type">
              <% pokemon.types.each do |type| %>
                <h3 class="<%= type.name %>"><%= type.name %></h3>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
